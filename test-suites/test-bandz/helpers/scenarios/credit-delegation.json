{
  "title": "LendingPool: credit delegation",
  "description": "Test cases for the credit delegation related functions.",
  "stories": [
    {
      "description": "User 3 deposits 1000 WBCH. User 0 deposits 1000 FLEXUSD, user 0 delegates borrowing of 1 WBCH on variable to user 4, user 4 borrows 1 WBCH variable on behalf of user 0",
      "actions": [
        {
          "name": "mint",
          "args": {
            "reserve": "WBCH",
            "amount": "1000",
            "user": "3"
          },
          "expected": "success"
        },
        {
          "name": "approve",
          "args": {
            "reserve": "WBCH",
            "user": "3"
          },
          "expected": "success"
        },
        {
          "name": "deposit",
          "args": {
            "reserve": "WBCH",
            "amount": "1000",
            "user": "3"
          },
          "expected": "success"
        },
        {
          "name": "mint",
          "args": {
            "reserve": "FLEXUSD",
            "amount": "1000",
            "user": "0"
          },
          "expected": "success"
        },
        {
          "name": "approve",
          "args": {
            "reserve": "FLEXUSD",
            "user": "0"
          },
          "expected": "success"
        },
        {
          "name": "deposit",
          "args": {
            "reserve": "FLEXUSD",
            "amount": "1000",
            "user": "0"
          },
          "expected": "success"
        },
        {
          "name": "delegateBorrowAllowance",
          "args": {
            "reserve": "WBCH",
            "amount": "2",
            "user": "0",
            "borrowRateMode": "variable",
            "toUser": "4"
          },
          "expected": "success"
        },
        {
          "name": "borrow",
          "args": {
            "reserve": "WBCH",
            "amount": "1",
            "user": "4",
            "onBehalfOf": "0",
            "borrowRateMode": "variable"
          },
          "expected": "success"
        }
      ]
    },
    {
      "description": "User 4 trying to borrow 1 WBCH stable on behalf of user 0, revert expected",
      "actions": [
        {
          "name": "borrow",
          "args": {
            "reserve": "WBCH",
            "amount": "1",
            "user": "4",
            "onBehalfOf": "0",
            "borrowRateMode": "stable"
          },
          "expected": "revert",
          "revertMessage": "59"
        }
      ]
    },
    {
      "description": "User 0 delegates borrowing of 1 WBCH to user 4, user 4 borrows 3 WBCH variable on behalf of user 0, revert expected",
      "actions": [
        {
          "name": "delegateBorrowAllowance",
          "args": {
            "reserve": "WBCH",
            "amount": "1",
            "user": "0",
            "borrowRateMode": "variable",
            "toUser": "4"
          },
          "expected": "success"
        },
        {
          "name": "borrow",
          "args": {
            "reserve": "WBCH",
            "amount": "3",
            "user": "4",
            "onBehalfOf": "0",
            "borrowRateMode": "variable"
          },
          "expected": "revert",
          "revertMessage": "59"
        }
      ]
    },
    {
      "description": "User 0 delegates borrowing of 1 WBCH on stable to user 2, user 2 borrows 1 WBCH stable on behalf of user 0",
      "actions": [
        {
          "name": "delegateBorrowAllowance",
          "args": {
            "reserve": "WBCH",
            "amount": "1",
            "user": "0",
            "borrowRateMode": "stable",
            "toUser": "2"
          },
          "expected": "success"
        },
        {
          "name": "borrow",
          "args": {
            "reserve": "WBCH",
            "amount": "1",
            "user": "2",
            "onBehalfOf": "0",
            "borrowRateMode": "stable"
          },
          "expected": "success"
        }
      ]
    }
  ]
}
