{
  "title": "LendingPool: Redeem negative test cases",
  "description": "Redeem function.",
  "stories": [
    {
      "description": "Users 0 Deposits 1000 FLEXUSD and tries to redeem 0 FLEXUSD (revert expected)",
      "actions": [
        {
          "name": "mint",
          "args": {
            "reserve": "FLEXUSD",
            "amount": "1000",
            "user": "0"
          },
          "expected": "success"
        },
        {
          "name": "approve",
          "args": {
            "reserve": "FLEXUSD",
            "user": "0"
          },
          "expected": "success"
        },
        {
          "name": "deposit",
          "args": {
            "reserve": "FLEXUSD",
            "amount": "1000",
            "user": "0"
          },
          "expected": "success"
        },

        {
          "name": "withdraw",
          "args": {
            "reserve": "FLEXUSD",
            "amount": "0",
            "user": "0"
          },
          "expected": "revert",
          "revertMessage": "Amount to redeem needs to be > 0"
        }
      ]
    },
    {
      "description": "Users 0 tries to redeem 1100 FLEXUSD from the 1000 FLEXUSD deposited (revert expected)",
      "actions": [
        {
          "name": "withdraw",
          "args": {
            "reserve": "FLEXUSD",
            "amount": "1100",
            "user": "0"
          },
          "expected": "revert",
          "revertMessage": "User cannot redeem more than the available balance"
        }
      ]
    },
    {
      "description": "Users 1 deposits 1 WBCH, borrows 100 FLEXUSD, tries to redeem the 1 WBCH deposited (revert expected)",
      "actions": [
        {
          "name": "mint",
          "args": {
            "reserve": "WBCH",
            "amount": "1",
            "user": "1"
          },
          "expected": "success"
        },
        {
          "name": "approve",
          "args": {
            "reserve": "WBCH",
            "user": "1"
          },
          "expected": "success"
        },
        {
          "name": "deposit",
          "args": {
            "reserve": "WBCH",
            "amount": "1",
            "user": "1"
          },
          "expected": "success"
        },
        {
          "name": "borrow",
          "args": {
            "reserve": "FLEXUSD",
            "amount": "100",
            "user": "1",
            "borrowRateMode": "stable"
          },
          "expected": "success"
        },
        {
          "name": "withdraw",
          "args": {
            "reserve": "WBCH",
            "amount": "-1",
            "user": "1"
          },
          "expected": "revert",
          "revertMessage": "Transfer cannot be allowed."
        }
      ]
    }
  ]
}
